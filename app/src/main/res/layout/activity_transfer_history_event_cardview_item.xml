<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_transfer_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/transfer_out_cv"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="12dp"
        app:cardMaxElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/tout_player_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/_1543" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tout_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:text="Player Name"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tout_player_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    style="@style/TextAppearance.Material3.BodySmall" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="8dp">

            <TextView
                android:id="@+id/transferDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21-Sep"
                android:layout_gravity="center_horizontal"
                style="@style/TextAppearance.Material3.BodySmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/transferTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:00 PM"
                android:layout_gravity="center_horizontal"
                style="@style/TextAppearance.Material3.BodySmall" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/tin_cv"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="12dp"
        app:cardMaxElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tin_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Name"
                    android:lines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tin_player_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    style="@style/TextAppearance.Material3.BodySmall" />
            </LinearLayout>

            <ImageView
                android:id="@+id/tin_player_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/_1543" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>





