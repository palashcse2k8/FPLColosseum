<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <import type="android.view.View" />
        <variable
            name="player"
            type="com.infotech.fplcolosseum.features.homepage.models.staticdata.PlayersData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundSecondary"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:background="@color/toolbar"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:text='@{player.getFirst_name + " " + player.getSecond_name}'/>

            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:layout_marginStart="8dp"
                android:src="@drawable/cross_icon"
                android:backgroundTint="@android:color/holo_red_dark"
                android:contentDescription="cross icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playerImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/_1543"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundSecondary"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="Team"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:text="|"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@{player.getTeam_name_full}"
                        android:textAlignment="textStart"
                        android:textColor="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundSecondary"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".7"
                        android:text="Position"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".1"
                        android:text="|"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="@{player.getSingular_name}"
                        android:textAlignment="textStart"
                        android:textColor="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/button_primary"
                        android:drawableStart="@drawable/alpha_c_circle"
                        android:padding="4dp"
                        android:text=" Make Captain"
                        android:textColor="@color/white"
                        android:clickable="true"
                        android:layout_gravity="start"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/btn_vice_cap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/button_primary"
                        android:drawableStart="@drawable/alpha_v_circle"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:text=" Make Vice Captain"
                        android:layout_gravity="start"
                        android:clickable="true"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/btn_substitute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/button_primary"
                        android:drawableStart="@drawable/switch_icon"
                        android:drawablePadding="4dp"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:text=" Substitute Player"
                        android:clickable="true"
                        android:layout_gravity="start"
                        android:layout_marginTop="16dp" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_shadow"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Form"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pts/Match"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Selected By"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text='@{"â‚¬" + String.format("%.1f", ((double) player.now_cost) / 10) + "m"}'
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/form"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{player.getForm}"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pointsPerMatch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{player.getPoints_per_game}"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selectedBy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text='@{player.getSelected_by_percent + "%"}'
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>


        <Button
            android:id="@+id/fullInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Full Profile"
            android:backgroundTint="@color/button_primary"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</layout>
